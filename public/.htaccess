# 1. ATIVAR COMPRESSÃO (Diminui o tamanho dos arquivos enviados ao navegador)
<IfModule mod_deflate.c>
  AddOutputFilterByType DEFLATE text/html text/plain text/xml text/css text/javascript application/javascript application/x-javascript application/json
</IfModule>
# 2. CONFIGURAR CACHE (Faz o site carregar instantaneamente para quem já visitou)
<IfModule mod_expires.c>
  ExpiresActive On
  ExpiresDefault "access plus 1 month"
  ExpiresByType image/webp "access plus 1 year"
  ExpiresByType image/png "access plus 1 year"
  ExpiresByType image/jpg "access plus 1 year"
  ExpiresByType image/jpeg "access plus 1 year"
  ExpiresByType image/svg+xml "access plus 1 year"
  ExpiresByType text/css "access plus 1 month"
  ExpiresByType application/javascript "access plus 1 month"
</IfModule>
# 3. SUAS REGRAS ORIGINAIS (HTTPS e Rotas do React)
<IfModule mod_rewrite.c>
  RewriteEngine On
  # --- INÍCIO DA ALTERAÇÃO PARA HTTPS ---
  RewriteCond %{HTTPS} off
  RewriteRule ^(.*)$ https://%{HTTP_HOST}%{REQUEST_URI} [L,R=301]
  # --- FIM DA ALTERAÇÃO ---
  RewriteBase /detalhe/
  RewriteRule ^index\.html$ - [L]
  RewriteCond %{REQUEST_FILENAME} !-f
  RewriteCond %{REQUEST_FILENAME} !-d
  RewriteRule . /detalhe/index.html [L]
</IfModule>